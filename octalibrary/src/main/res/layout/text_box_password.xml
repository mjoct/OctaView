<?xml version="1.0" encoding="utf-8"?>
<merge
    android:id="@+id/myTextboxRound"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.RelativeLayout">

    <!--
       Attributes:

       - Hint
       - Icon
       -

    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textbox_height"
        android:background="@drawable/shp_layout_round_with_border">

        <EditText
            android:id="@+id/txtDummy"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginRight="55dp"
            android:layout_centerVertical="true"

            android:background="@drawable/shp_text_no_line"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/myColor_textBox_text"

            android:inputType="text"
            android:hint="Your text here"

            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_lock"/>

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true"

            android:drawableStart="@drawable/ic_eye"
            android:drawableTint="@color/myColor_textBox_button"

            android:background="@drawable/ani_button_ripple_no_border"/>

        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:drawableStart="@drawable/ic_clear"
            android:drawableTint="@color/myColor_textBox_button"

            android:background="@drawable/ani_button_ripple_no_border"/>

    </RelativeLayout>

</merge>